{
  "name": "fulbacho",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "dependencies": {
    "antd": "^3.11.6",
    "apollo-client": "^2.4.8",
    "babel-runtime": "^6.20.0",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "express": "^4.15.2",
    "graphql": "^14.0.2",
    "graphql-server-express": "^1.4.0",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tag": "^2.0.0",
    "graphql-tools": "^4.0.3",
    "history": "^4.6.1",
    "immutability-helper": "^2.0.0",
    "indexof": "0.0.1",
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "meteor-node-stubs": "^0.4.1",
    "moment": "^2.17.0",
    "normalize.css": "^8.0.1",
    "react": "^16.7.0",
    "react-addons-pure-render-mixin": "^15.3.2",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "react-facebook": "^6.0.15",
    "react-mounter": "^1.2.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.1.1",
    "react-spinjs": "^3.0.0",
    "react-tap-event-plugin": "^3.0.3",
    "react-waypoint": "^8.1.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "subscriptions-transport-ws": "^0.9.15",
    "tracker-component": "^1.3.21",
    "underscore": "^1.8.3"
  },
  "eslintConfig": {
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "max-len": 0,
      "import/no-unresolved": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-import": "^1.1.0",
    "babel-preset-stage-1": "^6.16.0",
    "deep-freeze": "0.0.1",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.12.0",
    "expect": "^23.6.0",
    "node-sass": "^4.11.0",
    "postcss-reporter": "^6.0.0",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0",
    "stylelint": "^9.9.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "stylelint": {
        "rules": {
          "selector-class-pattern": "[a-z]+"
        }
      },
      "postcss-reporter": {
        "clearMessages": true
      }
    }
  },
  "cssModules": {
    "extensions": [
      "scss",
      "css"
    ],
    "enableSassCompilation": [
      "scss"
    ],
    "passthroughPaths": [
      "node_modules/antd",
      "^client/style/basscss.css",
      "^client/style/main.scss"
    ],
    "globalVariables": [
      "client/style/variables.scss"
    ],
    "ignorePaths": [
      "node_modules"
    ]
  }
}
